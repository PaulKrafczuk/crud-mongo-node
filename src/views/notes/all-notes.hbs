<div class="row">

  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-tittle d-flex justify-content-between align-items-center"
          >
            {{tittle}}
            <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>{{description}}</p>
          <div class="d-grid gap-2">
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
              <input type="hidden" value="DELETE" name="_method" />
              <button class="btn btn-danger btn-block btn-sm" type="submit">
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <h1> Hello {{user.name}} !!</h1>
        <p class="lead">Todavia no hay notas</p>
        <div class="d-grid gap-2">
          <a href="/notes/add" class="btn btn-succes">Crea una!</a></div>
      </div>
    </div>
  {{/each}}

</div>